<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.development.friendzone"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
    
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.development.friendzone.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name="com.development.friendzone.NearbyFriendActivity"
             android:label="Nearby Devices" 
            ></activity>
        <activity 
            android:name="com.development.friendzone.AddFriendActivity"
            ></activity>
        <activity 
            android:name="com.development.friendzone.ManageFriendsFriendListActivity"
             android:label="Manage Friends" 
            ></activity>
          <activity 
            android:name="com.development.friendzone.FriendListActivity"
            
            ></activity>     
        <activity 
            android:name="com.development.friendzone.OptionActivity"
            android:label="Option" 
            ></activity>
          <activity 
            android:name="com.development.friendzone.HelpActivity"
             android:label="About App" 
            ></activity>
        
    </application>
    

</manifest>
